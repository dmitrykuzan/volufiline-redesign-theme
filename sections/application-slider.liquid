<script>
  document.addEventListener('DOMContentLoaded', function () {
    const applicationSliderThumb = new Swiper('.application-slider__swiper-thumbnail', {
      spaceBetween: 10,
      slidesPerView: 4,
      freeMode: true,
      watchSlidesProgress: true,

      breakpoints: {

        1380: {
          spaceBetween: 20,
        },

        1500: {
          spaceBetween: 30,
        },
      },
    });

    const applicationSliderImage = new Swiper('.application-slider__swiper-image', {
      spaceBetween: 10,
      allowTouchMove: false,
      speed: 1000,
      slidesPerView: 1,

      breakpoints: {
        1380: {
          spaceBetween: 20,
        },
      },

      navigation: {
        prevEl: '.application-slider__btn-prev',
        nextEl: '.application-slider__btn-next',
      },

      thumbs: {
        swiper: applicationSliderThumb,
      },
    });

    const applicationSliderText = new Swiper('.application-slider__swiper-text', {
      spaceBetween: 10,
      allowTouchMove: false,
      slidesPerView: 1,
      speed: 700,
    });

    applicationSliderImage.on('slideChange', () => {
      const index = applicationSliderImage.activeIndex;
      applicationSliderText.slideTo(index);
    });
  });
</script>


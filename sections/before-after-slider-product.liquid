<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiperBeforeAfter = new Swiper('.before-after-slider__swiper', {
      spaceBetween: 10,
      slidesPerView: 1.2,
      autoHeight: true,
      speed: 800,

      pagination: {
        el: '.before-after-slider__pagination',
        clickable: true,
        type: 'progressbar',
      },

      navigation: {
        nextEl: '.before-after-slider__btn--next',
        prevEl: '.before-after-slider__btn--prev',
      },

      breakpoints: {
        767: {
          spaceBetween: 10,
          slidesPerView: 1.2,
          autoHeight: true,
        },

        1023: {
          spaceBetween: 10,
          slidesPerView: 2.5,
          autoHeight: true,
          centeredSlides: true,
          initialSlide: 2,
          loop: true,
        },

        1440: {
          spaceBetween: 15,
          slidesPerView: 2.5,
          autoHeight: true,
          centeredSlides: true,
          initialSlide: 2,
          loop: true,
        },
      },
    });
  });
</script>

